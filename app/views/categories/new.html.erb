<h1 class="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
        <%= f.label :name %></br>
    </div>
    <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
        <%= f.submit("Create New Category", class: "btn btn-primary btn-lg") %>
    </div>
  </div>
    </div>
  </div>
<% end %>

<div>
  <%= link_to "Return back to articles listing", articles_path %>
</div>

